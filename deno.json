{
  "tasks": {
    "dev": "supabase functions serve --env-file .env.local",
    "deploy": "supabase functions deploy",
    "test": "deno test --allow-all",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "setup": "./scripts/setup.sh",
    "deploy-prod": "./scripts/deploy.sh",
    "test-local": "./scripts/test.sh"
  },
  "imports": {
    "std/": "https://deno.land/std@0.208.0/",
    "hono": "https://deno.land/x/hono@v3.12.11/mod.ts",
    "hono/middleware": "https://deno.land/x/hono@v3.12.11/middleware.ts",
    "supabase": "https://esm.sh/@supabase/supabase-js@2.39.0"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["supabase/"],
    "exclude": ["node_modules/", ".supabase/"]
  },
  "lint": {
    "include": ["supabase/"],
    "exclude": ["node_modules/", ".supabase/"]
  },
  "test": {
    "include": ["tests/"],
    "exclude": ["node_modules/", ".supabase/"]
  }
}
